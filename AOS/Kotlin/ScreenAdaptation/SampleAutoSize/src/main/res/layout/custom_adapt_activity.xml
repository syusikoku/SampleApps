<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="clickPresenter"
            type="com.example.autosize.adapt.custom.CustomAdaptActivity.CustomAdaptClickPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/common_textview_style"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@color/colorPrimary"
            android:text="H-248DP \n (height Total:667dp)" />

        <!--把高度设置为 2 dp 的原因是想展示 AndroidAutoSize 可以把适配精度精确到 1 dp (写 2 dp 是为了更显眼, 写 1 dp 也是可以的)
        如果您看得到屏幕中间高度为 2 dp 的白色间隙, 说明本适配方案, 能精确适配, 您可以放心填写 dp 值-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_common_style"
            android:layout_width="match_parent"
            android:background="#0f3"
            android:onClick="@{()-> clickPresenter.execShowFragmentAdapt()}"
            android:text="CUSTOMADAPT(FRAGMENT)"
            android:textColor="@color/teal_700" />

        <TextView
            style="@style/common_textview_style"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="#d0f"
            android:text="H-125dp" />

        <TextView
            style="@style/common_textview_style"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:background="#d21"
            android:text="H-191dp" />
    </LinearLayout>


</layout>